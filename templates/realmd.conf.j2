# {{ ansible_managed }}
[users]
default-home = /home/%U@%D
default-shell = /bin/bash

[active-directory]
default-client = sssd
os-name = {{ ansible_distribution }}
os-version = {{ ansible_distribution_version }}
 
[service]
# Set this to no to disable automatic installation of packages via package-kit.
#automatic-install = no
 
[{{ ansible_role_adjoin_domain }}]
fully-qualified-names = yes
automatic-id-mapping = yes
user-principal = yes
manage-system = yes
computer-ou = {{ ansible_role_adjoin_computer_ou | default(omit) }}
