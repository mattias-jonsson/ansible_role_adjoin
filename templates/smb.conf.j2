# {{ ansible_managed }}
[global]
workgroup = {{ ansible_role_adjoin_domain | regex_search("^[^.]*") | upper }}
client signing = yes
client use spnego = yes
kerberos method = secrets and keytab
realm = {{ ansible_role_adjoin_domain | upper }}
log file = /var/log/samba/%m.log
security = ads
password server = {{ ansible_role_adjoin_kdc | upper }}
